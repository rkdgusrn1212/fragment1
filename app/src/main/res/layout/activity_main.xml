    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.khgkjg12.examples.fragment1.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.khgkjg12.examples.fragment1.BookListFragment"
        android:id="@+id/fragmentTitles"/>


    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.khgkjg12.examples.fragment1.BookDescFragment"
        android:id="@+id/fragmentDescription"/>

</LinearLayout>
